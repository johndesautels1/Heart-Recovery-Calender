# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=heart_recovery_calendar
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port the backend server will run on
PORT=4000

# Node environment (development, production, test)
NODE_ENV=development

# ===========================================
# SECURITY
# ===========================================
# JWT secret key for token signing
# IMPORTANT: Generate a secure random string for production!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origin(s) for CORS - Controls which domains can access your API
# Development: Leave blank to allow localhost:3000, localhost:3001, and localhost:5173
# Production: Set to your deployed frontend domain (e.g., https://yourdomain.com)
# Multiple origins: Separate with commas (e.g., https://app.com,https://admin.app.com)
# IMPORTANT: Never use '*' in production as it disables credentials and is insecure
CORS_ORIGIN=http://localhost:3000

# Frontend URL for OAuth redirects and notifications
FRONTEND_URL=http://localhost:3000

# ===========================================
# DEVICE INTEGRATIONS (CRITICAL for Health Data)
# ===========================================

# Strava API - For heart rate and exercise data sync
# Get credentials from: https://www.strava.com/settings/api
# IMPORTANT: This integration syncs heart rate data for patient monitoring
STRAVA_CLIENT_ID=your_strava_client_id_here
STRAVA_CLIENT_SECRET=your_strava_client_secret_here
STRAVA_REDIRECT_URI=http://localhost:4000/api/strava/callback

# Polar API - For heart rate data sync
# Get credentials from: https://admin.polaraccesslink.com/
# POLAR_CLIENT_ID=your_polar_client_id_here
# POLAR_CLIENT_SECRET=your_polar_client_secret_here
# POLAR_REDIRECT_URI=http://localhost:4000/api/polar/callback

# Samsung Health API
# SAMSUNG_CLIENT_ID=your_samsung_client_id_here
# SAMSUNG_CLIENT_SECRET=your_samsung_client_secret_here
# SAMSUNG_REDIRECT_URI=http://localhost:4000/api/samsung/callback

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================
# Enable detailed SQL query logging (true/false)
# DB_LOGGING=false

# Email service configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# EMAIL_FROM=noreply@heartrecovery.com

# Twilio SMS Configuration (for SMS reminders)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Firebase Push Notifications
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_CLIENT_EMAIL=your-firebase-client-email
# FIREBASE_PRIVATE_KEY=your-firebase-private-key

# File upload configuration
# MAX_FILE_SIZE=5242880
# UPLOAD_DIR=./uploads

# Rate limiting (requests per window)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# PRODUCTION NOTES
# ===========================================
# For production deployment:
# 1. Set NODE_ENV=production
# 2. Generate a strong JWT_SECRET (at least 32 random characters)
# 3. Update DB_* settings with your production database credentials
# 4. Set CORS_ORIGIN to your production frontend URL
# 5. Enable SSL/TLS for database connections if required
# 6. Consider using environment-specific secret management (e.g., AWS Secrets Manager, HashiCorp Vault)
